{
  "name": "orion-ui-vscode",
  "displayName": "Orion UI Companion",
  "description": "VSCode companion to improve DX for Orion UI projects.",
  "version": "0.0.3",
  "publisher": "orion-ui",
  "icon": "resources/orion.png",
  "repository": "https://github.com/orion-ui/orion-vscode",
  "license": "MIT",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:vue",
    "onCommand:orion.createServiceFromTemplate",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "orion-ui-companion",
          "title": "Orion UI Companion",
          "icon": "resources/orion.png"
        }
      ]
    },
    "views": {
      "orion-ui-companion": [
        {
          "id": "orion.serviceApiHelper",
          "name": "Service API Helper",
          "icon": "resources/orion.png"
        }
      ],
      "explorer": [
        {
          "id": "orion.componentUsageView",
          "name": "Orion Components",
          "icon": "resources/orion.png"
        }
      ]
    },
    "commands": [
      {
        "command": "orion.openComponentUsageBeside",
        "title": "Orion: Open Component Usage Beside",
        "icon": "$(split-horizontal)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "orion.openComponentUsageBeside",
          "when": "view == orion.componentUsageView && viewItem == orionComponentUsageItem.line",
          "group": "inline"
        }
      ]
    },
    "submenus": [
      {
        "id": "orion.explorer",
        "label": "Orion"
      }
    ],
    "configuration": {
      "title": "Orion UI",
      "properties": {
        "orion.setupHighlightColor": {
          "type": "string",
          "default": "rgb(156, 105, 252)",
          "description": "Highlight color for the setup keyword in Vue files."
        }
      }
    }
  },
  "scripts": {
    "compile": "npm run bundle",
    "typecheck": "tsc -p . --noEmit",
    "bundle": "node scripts/bundle.js",
    "watch": "tsc -watch -p .",
    "lint": "eslint .",
    "test": "mocha -r ts-node/register src/test/suite/**/*.test.ts",
    "perf": "ts-node scripts/perf/benchmark.ts"
  },
  "devDependencies": {
    "@orion.ui/orion-linter": "^1.0.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.89.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.0.0",
    "mocha": "^10.4.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@vue/compiler-dom": "^3.5.0",
    "@vue/compiler-sfc": "^3.5.0",
    "undici": "^6.18.0",
    "typescript": "^5.4.5"
  }
}